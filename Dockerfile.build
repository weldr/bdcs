FROM juhp/fedora-haskell-ghc:8.0.2
RUN dnf -y install xz-devel zlib-devel glib2-devel gobject-introspection-devel ostree-devel && dnf clean all

ENV PATH ~/.cabal/bin:$PATH

RUN cabal update

COPY haskell-rpm /root/bdcs/haskell-rpm/
COPY importer /root/bdcs/importer/

RUN cabal update && cabal install happy && \
    cd /root/bdcs/haskell-rpm && cabal install && \
    cd /root/bdcs/importer && cabal install && \
    cd /root/.cabal && rm -rf lib logs packages && \
    cabal clean
